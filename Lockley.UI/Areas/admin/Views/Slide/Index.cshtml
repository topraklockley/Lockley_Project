@model IQueryable<Slide>

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>All Slides</h3>
            </div>           
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Slides</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" asp-controller="slide" asp-action="add">Add Slide</a>                                    
                                </div>
                            </li>
                        </ul>

                        <div class="clearfix"></div>

                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box table-responsive">
                                    <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>Title</th>
                                                <th>Slogan</th>
                                                <th>Price</th>
                                                <th>Link</th>
                                                <th>Display Index</th>
                                                <th>Transactions</th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            @foreach (Slide s in Model)
                                            {
                                                <tr>
                                                    <td>@s.Title</td>
                                                    <td>@s.Slogan</td>                                                  
                                                    <td>@s.Price</td>
                                                    <td>@s.Link</td>
                                                    <td>@s.DisplayIndex</td>
                                                    <td>
                                                        <a asp-controller="slide" asp-action="edit" asp-route-id="@s.ID"><i class="fa-regular fa-pen-to-square" style="color:blue"></i></a>
                                                        &nbsp
                                                        <a asp-controller="slide" asp-action="delete" asp-route-id="@s.ID"><i class="fa-solid fa-trash-can" style="color: red"></i></a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
