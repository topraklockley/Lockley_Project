@model IQueryable<ProductPicture>

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Product Pictures</h3>
            </div>           
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Pictures of @ViewBag.ProductName</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="productpicture" asp-action="add" asp-route-productid="@ViewBag.ProductID">Add Product Picture</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>

                        <div class="clearfix"></div>

                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box table-responsive">
                                    <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>Picture Name</th>
                                                <th>File Path</th>
                                                <th>Display Index</th>
                                                <th>Transactions</th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            @foreach (ProductPicture pp in Model)
                                            {
                                                <tr>
                                                    <td>@pp.Name</td>
                                                    <td>@pp.FilePath</td>
                                                    <td>@pp.DisplayIndex</td>
                                                    <td>
                                                        <a asp-controller="productpicture" asp-action="edit" asp-route-productid="@pp.ProductID" asp-route-id="@pp.ID"><i class="fa-regular fa-pen-to-square" style="color:blue"></i></a>
                                                        &nbsp
                                                        <a asp-controller="productpicture" asp-action="delete" asp-route-productid="@pp.ProductID" asp-route-id="@pp.ID"><i class="fa-solid fa-trash-can" style="color: red"></i></a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
