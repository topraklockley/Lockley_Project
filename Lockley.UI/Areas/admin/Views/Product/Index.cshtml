@model ProductVM

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>All Products</h3>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Products</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" asp-controller="product" asp-action="add">Add Product</a>
                                </div>
                            </li>
                        </ul>

                        <div class="clearfix"></div>

                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box table-responsive">
                                    <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>Name</th>                                               
                                                <th>Price</th>
                                                <th>Units In Stock</th>
                                                <th>Category Name</th>
                                                <th>Brand Name</th>
                                                <th>Display Index</th>
                                                <th>Transactions</th>
                                            </tr>
                                        </thead>
                                        
                                        <tbody>

                                            @foreach (Product p in Model.Products)
                                            {
                                                <tr>
                                                    <td>@p.Name</td>
                                                    <td>@p.Price</td>
                                                    <td>@p.UnitsInStock</td>
                                                    <td>@(p.CategoryID != null ? p.Category.Name : "")</td>
                                                    <td>@(p.BrandID != null ? p.Brand.Name : "")</td>                                                   
                                                    <td>@p.DisplayIndex</td>
                                                    <td>
                                                        <a asp-controller="product" asp-action="edit" asp-route-id="@p.ID"><i class="fa-regular fa-pen-to-square" style="color:blue"></i></a>
                                                        &nbsp
                                                        <a asp-controller="productpicture" asp-action="index" asp-route-productid="@p.ID"><i class="fa-solid fa-image" style="color: cyan"></i></a>
                                                        &nbsp
                                                        <a asp-controller="product" asp-action="delete" asp-route-id="@p.ID"><i class="fa-solid fa-trash-can" style="color: red"></i></a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
